<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PembayaranActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtIdTiket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asd"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/imgGambar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background" />


        <EditText
            android:id="@+id/edtTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Input Tanggal"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Input Nama"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtAlamatJemput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Input Alamat Jemput"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtAlamatAntar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Input Alamat Antar"
            android:inputType="text" />

        <Button
            android:id="@+id/btnAddPembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:text="Bayar" />
    </LinearLayout>

</ScrollView>